<?xml version='1.0' encoding='utf-8'?>
<widget id="es.guinotepro.guinotepro" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>GuiñotePro</name>
    <description>
        Videojuego de guiñote
    </description>
    <author email="ivan@lopez.es" href="http://www.guiñotepro.es">
        Iván López Asín
    </author>
    <content src="index.html" />
    <access origin="*" />
	
	<allow-navigation href="http://*/*" />
	<allow-intent href="https://*/*" />

	<feature name="NetworkStatus">
		<param name="ios-package" value="CDVConnection" />
	</feature>

	
	<feature name="NetworkStatus">
		<param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
	</feature>



	<preference name="Orientation" value="landscape" />
	<preference name="SplashScreen" value="screen" />
	<preference name="KeepRunning" value="true"/>
	<preference name="fullscreen" value="true" />
	<preference name="exit-on-suspend" value="true" />
  
  
		
	<plugin name="cordova-plugin-inappbrowser" spec="1.7.0" />
	<plugin name="cordova-plugin-nativeaudio" spec="3.0.9" />
	<plugin name="cordova-plugin-splashscreen" spec="4.0.2" />
	<plugin name="cordova-plugin-vibration" spec="2.1.4" />
	<plugin name="cordova-plugin-whitelist" spec="1.3.2" />

	
	<icon src="icon.png" />
    <icon src="android-icon-36x36.png"   gap:platform="android"    gap:qualifier="ldpi" />
    <icon src="android-icon-48x48.png"   gap:platform="android"    gap:qualifier="mdpi" />
    <icon src="android-icon-72x72.png"   gap:platform="android"    gap:qualifier="hdpi" />
    <icon src="android-icon-96x96.png"  gap:platform="android"    gap:qualifier="xhdpi" />
    <icon src="apple-icon-57x57.png"            gap:platform="ios"        width="57" height="57" />
    <icon src="apple-icon-72x72.png"            gap:platform="ios"        width="72" height="72" />
    <icon src="apple-icon-57-2x.png"         gap:platform="ios"        width="114" height="114" />
    <icon src="apple-icon-114x114.png"         gap:platform="ios"        width="144" height="144" />
	
	<splash src="splash.png" />
	<!-- iPhone and iPod touch -->
	<splash src="screen-iphone-landscape.png" platform="ios" width="320" height="480" />
	<splash src="screen-iphone-landscape-2x.png" platform="ios" width="640" height="960" />

	<!-- iPhone 5 / iPod Touch (5th Generation) -->
	<splash src="screen-iphone-landscape-568h-2x.png" platform="ios" width="640" height="1136" />

	<!-- iPhone 6 -->
	<splash src="screen-iphone-landscape-667h.png" platform="ios" width="750" height="1334" />
	<splash src="screen-iphone-landscape-736h.png" platform="ios" width="2208" height="1242" />

	<!-- iPad -->
	<splash src="screen-ipad-landscape.png" platform="ios" width="1024" height="768" />

	<!-- Retina iPad -->
	<splash src="screen-ipad-landscape-2x.png" platform="ios" width="2048" height="1536" />


<splash src="ldpi.png" platform="android" qualifier="ldpi" />
<splash src="mdpi.png" platform="android" qualifier="mdpi" />
<splash src="hdpi.png" platform="android" qualifier="hdpi" />
<splash src="xhdpi.png" platform="android" qualifier="xhdpi" />
<splash src="fr-xhdpi.png" platform="android" qualifier="fr-xhdpi" />
<splash src="xxhdpi.png" platform="android" qualifier="land-xxhdpi" />	
</widget>
